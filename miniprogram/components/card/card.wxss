.card{
   padding: 20rpx;
   background-color: #fff;
}
.card-title{
   display: flex;
}
.card-portrait{
   width: 64rpx;
   height: 64rpx;
   border-radius: 50%;
   margin-right: 20rpx;
}
.card-box{
   flex: 1;
}
.card-time,.text{
   font-size: 24rpx;
}
.card-content{
   margin:20rpx 0;
   font-size: 32rpx;
   font-weight: 400;
   line-height: 1.5;
}
.card-img{
   display: flex;
   flex-wrap: wrap;
   margin: 0 auto;
}
.card-img .img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.card-img .img:nth-child(3n){
  margin-right: 0;
}
.card-nickName{
  font-size: 32rpx;
}
.address{
   margin-top: 10rpx;
   line-height: 3;
   margin-left: 0;
   margin-right: 0;
}
.icon-position,.text{
   color:rgba(33, 230, 33, 0.64);
}
.text{
   margin-left: 20rpx;
}